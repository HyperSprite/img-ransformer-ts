{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "removeComments": true,
    "preserveConstEnums": true,
    "noEmitOnError": true,
    "rootDir": "./src",
    "outDir": "dist",
    "sourceMap": true,
    "watch": true,
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "dist"
  ]
}